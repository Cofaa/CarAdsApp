@model CarAdsApp.Models.Oglas

@{
    ViewData["Title"] = "Detalji Oglasa";
}

<h2 class="mb-3">Detalji Oglasa</h2>

<div>
    <h4>@Model.Marka</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Naziv</dt>
        <dd class="col-sm-10">@Model.Naziv</dd>

        <dt class="col-sm-2">Godina Proizvodnje</dt>
        <dd class="col-sm-10">@Model.GodinaProizvodnje</dd>

        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Cena €</dd>

        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Model.Opis</dd>
    </dl>
</div>

<a asp-controller="Oglas" asp-action="Index" class="btn btn-secondary mt-3">Nazad na oglase</a>

@model CarAdsApp.Models.ViewModels.DeleteOglasVM

@{
    ViewData["Title"] = "Brisanje Oglasa";
}

<h2>Da li ste sigurni da želite da obrišete ovaj oglas?</h2>

<dl class="row">
    <dt class="col-sm-2">Naziv</dt>
    <dd class="col-sm-10">@Model.Naziv</dd>

    <dt class="col-sm-2">Marka</dt>
    <dd class="col-sm-10">@Model.Marka</dd>

    <dt class="col-sm-2">Cena</dt>
    <dd class="col-sm-10">@Model.Cena €</dd>

    <dt class="col-sm-2">Opis</dt>
    <dd class="col-sm-10">@Model.Opis</dd>

    <dt class="col-sm-2">Korisnik</dt>
    <dd class="col-sm-10">@Model.KorisnikUsername</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Otkaži</a>
</form>
